<% if params[:operation] == 'confirm' %>
  <%= turbo_stream.update "resolve-booking-#{@booking.id}-button", partial: 'shared/resolve_booking_button', 
                                                                 locals: { booking: @booking, disabled: true, btn_class: 'btn-outline-secondary', operation: :confirm } %>
<% elsif params[:operation] == 'decline' %>
  <%= turbo_stream.update "resolve-booking-#{@booking.id}-button", "Declined" %>
<% end %>
